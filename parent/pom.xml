        <maven.compiler.plugin>3.0</maven.compiler.plugin>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.resources.plugin>2.4.3</maven.resources.plugin>
        <java.version>1.8</java.version>
        <junit>4.12</junit>
        <hamcrest-junit>2.0.0.0</hamcrest-junit>
        <mp3agic>0.8.4</mp3agic>
        <jackson>2.8.3</jackson>
        <mockito>1.10.19</mockito>
