    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>ku.piii</groupId>
                <artifactId>music-model</artifactId>
                <version>1.0-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>ku.piii</groupId>
                <artifactId>m3u-toolkit</artifactId>
                <version>1.0-SNAPSHOT</version>
