<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>



<GridPane xmlns:fx="http://javafx.com/fxml/1"   alignment="CENTER" hgap="10.0" vgap="10.0"
        
          fx:controller="ku.piii.musictableviewfxml.FXMLController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding> 
    
    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Music Collection"                
           GridPane.columnIndex="0" GridPane.rowIndex="0" fx:id="addressBook">
    </Label>


    <Label  text=""  GridPane.columnIndex="0" GridPane.rowIndex="4" fx:id="selectCheck" >
    </Label>
    <Label  text="top tracks"  visible="false" GridPane.columnIndex="0" GridPane.rowIndex="5" fx:id="toptrackslabel" >
    </Label>

    <TableView fx:id="tableView" 
               GridPane.columnIndex="0" 
               GridPane.columnSpan="1" 
               GridPane.hgrow="ALWAYS" 
               GridPane.vgrow="ALWAYS"        
               GridPane.rowIndex="2"> 
    </TableView>
    
    <TableView fx:id="tableView2" 
               GridPane.columnIndex="1" 
               GridPane.columnSpan="1" 
               GridPane.hgrow="ALWAYS" 
               GridPane.vgrow="ALWAYS"        
               GridPane.rowIndex="2">
    </TableView>
    
    <TextArea fx:id="textarea" 
              GridPane.columnIndex="0" 
              wrapText="true" 
              GridPane.halignment="RIGHT"       
              GridPane.rowIndex="6"
              maxWidth="300" 
              GridPane.hgrow="NEVER"
              visible="false">          
    </TextArea>
    
    <ListView fx:id="toptrackslist"
              GridPane.columnIndex="0" 
              GridPane.columnSpan="1" 
              GridPane.halignment="LEFT" 
              maxWidth="400"  
              GridPane.fillWidth="true" 
              GridPane.hgrow="ALWAYS" 
              GridPane.rowIndex="6"
              visible="false" 
    >  
    </ListView>  
     
    
    <Button GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.halignment="RIGHT"   text="info" onAction="#topTracks" fx:id="Info" />
    <Button GridPane.rowIndex="3" GridPane.columnIndex="0"  text="Start" onAction="#handleButtonAction" fx:id="button" />
    <Button GridPane.rowIndex="3" GridPane.halignment="CENTER"  text="select" onAction="#handleLookUpBtnAction" fx:id="lookupbtn" />
    <Button GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="right"  text="browse" onAction="#browse" fx:id="browse" />
    <Button GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.halignment="left"  text="findURL" onAction="#VisitURL" fx:id="findURL" />
    
    <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyInput"> 
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem text="New"/>
                    <MenuItem text="Open"/>
                    <MenuItem text="Save"/>
                    <MenuItem text="Save As"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Exit"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Paste"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="Search" disable="true"/>
                    <MenuItem text="Online Manual" visible="false"/>
                    <SeparatorMenuItem />
                    <MenuItem text="About" onAction="#handleAboutAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
</GridPane>

